
<%= form_with(model: pin, local: true, :html => {class: 'form'}) do |form| %>
<% if pin.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>
        <ul>
        <% pin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, placeholder: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class: 'd-block' %>
    </div>






    <% if pin.image.attached? %>
    <div class="form-group">
        <%= image_tag pin.image, class: 'card-img-top wt-200' %>
    </div>
    <% end %>

    
    <div class="form-group">
        <%= form.submit t('shared.create') + ' Pin', class: 'btn btn-primary'%>
    </div>
<% end %>
