<div class="text-center">

	<h1><%= t('devise.confirmations.new.resend_confirmation_instructions') %></h1>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  	<%= render "devise/shared/error_messages", resource: resource %>

  	<div class="field">
    	<%= f.label :email %>
    	<%= f.email_field :email, autofocus: true, placeholder: true, class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
	</div>

	<div class="actions mt-4">
		<%= f.submit t('devise.confirmations.new.resend_confirmation_instructions'), class: 'btn btn-primary' %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>