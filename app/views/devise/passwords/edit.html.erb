<h2><%= t('devise.passwords.edit.change_my_password')%></h2>



<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.hidden_field :reset_password_token %>


<div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autofocus: true, placeholder: true, class: 'form-control' %>
    <% if @minimum_password_length %>
    <p class="form-text text-muted">
        <em>(<%= @minimum_password_length %> <%= t('devise.registrations.minpass')%>)</em>
    </p>
    <% end %>
</div>


<div class="form-group">
    <%= f.label :password_confirmation%>
    <%= f.password_field :password_confirmation, placeholder: true, class: 'form-control' %>
</div>

<div class="actions">
    <%= f.submit t('shared.create'), class: 'btn btn-primary' %>
</div>
<% end %>
<%= render "devise/shared/links" %>
