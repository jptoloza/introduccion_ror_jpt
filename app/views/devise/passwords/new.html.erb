<div class="text-center">

	<h1><%= t('devise.passwords.new.forgot_your_password') %></h1>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<%= render "devise/shared/error_messages", resource: resource %>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.email_field :email, placeholder: true, autofocus: true, class: 'form-control' %>
	</div>

	<div class="actions mt-4">
		<%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>