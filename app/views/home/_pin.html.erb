

<div class="card card-pt">
	<% if pin.image.attached? %>
 	<%= image_tag pin.image.variant(scale: "40%") %>
 	<% end %>
 	<div class="card-body">
 		<p class="card-text"><%= pin.title %></p>



		<p><%= pin.likes.count %> <%= (pin.likes.count) == 1 ? 'Like' : 'Likes'%></p>


<% pre_like = pin.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>
  <%= button_to 'Unlike', pin_like_path(pin, pre_like), method: :delete %>
<% else %>
  <%= button_to 'Like', pin_likes_path(pin), method: :post %>
<% end %>


	</div>
</div>

